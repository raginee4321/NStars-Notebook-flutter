<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap android:gravity="fill" android:src="@drawable/background"/>
    </item>
    <!-- Circular background for logo -->
    <item android:gravity="center" android:width="220dp" android:height="220dp">
        <shape android:shape="oval">
            <solid android:color="#87CEEB"/>
        </shape>
    </item>
    <!-- Logo centered on circular background -->
    <item android:gravity="center" android:width="180dp" android:height="180dp">
        <bitmap android:src="@drawable/splash"/>
    </item>
</layer-list>
